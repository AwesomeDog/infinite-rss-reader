{
  "description": "Expose Thunderbird RSS via HTTP API",
  "manifest_version": 2,
  "name": "RSS HTTP API",
  "version": "2.0",
  "icons": {
    "48": "icons/rss.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "rss_bridge@example.org",
      "strict_min_version": "91.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/rss.svg"
  },

  "permissions": [
    "nativeMessaging",
    "accountsRead",
    "messagesRead",
    "messagesUpdate"
  ]
}
